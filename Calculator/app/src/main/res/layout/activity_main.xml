<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="0.0"
        android:textSize="48sp"
        android:gravity="end|bottom"
        android:layout_weight="0.4"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.6"
        android:padding="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="C"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="="
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="/"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="7"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="8"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="9"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="*"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="4"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="5"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="6"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="-"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="2"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="3"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:text="+"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>